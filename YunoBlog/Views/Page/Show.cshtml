@model YunoBlog.Models.Content
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="article">
    <div class="header">
        <div class="title"><a href="#">@Model.Title</a></div>
        <div class="info info1">
            <span class="time">
                @Html.ToCreationTime(Model.Time)
                @if (Model.Type == YunoBlog.Models.ContentType.Article)
                {
                    <span>
                        发表在  @Html.ActionLink(Model.Category.Title, "Index", "Home", new { c = Model.CategoryID }, null);
                    </span>
                }
            </span>
        </div>
    </div>
    <div class="section entry">
        @Html.Markdown(Model.Body)
    </div>
</div>
<div id="cmt">
    <p>
        <div id="disqus_thread" style="padding: 15px 15px 15px 15px">
            <script type="text/javascript">
                /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                var disqus_shortname = '@ViewBag.Disqus'; // required: replace example with your forum shortname

                /* * * DON'T EDIT BELOW THIS LINE * * */
                (function () {
                    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                })();
            </script>
        </div>
    </p>
</div>

<script>
    autoplay = true;
    $("#p_@Model.ID").addClass("current_page_item");
</script>

